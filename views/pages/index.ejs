<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/nav.ejs %>
  
  <div class="row justify-content-md-center mx-0 my-2">
    
  
  </div>
  <div class="row justify-content-md-center mx-0">
    
      <div class="w-100"></div>
        
    
      <form action="/" method="post">
        <div class="row">
            <div class="input-group mb-3 col">
                <input type="search" class="form-control" name="key" id="key" value="<%=key%>" placeholder="Type here" required>
                <div class="input-group-append">
                  <button class="btn btn-primary" style="border-color:#4c96d7; background-color:#4c96d7"type="submit">Translate</button>
                </div>
            </div>
        </div>
      </form>
            
    </div>

      <div class="w-100"></div>
      
      <%if(result==1){%>
        <div class="container">
          <div class="row">
            <div class="col-sm-2"></div>
            <div id="carouselExampleIndicators" class="col-sm-8 carousel slide" data-ride="carousel">
          
                <div class="carousel-inner">
                    <div class="carousel-item active">
                      <div class="card text-light px-5 pb-2" style="border-color:#4c96d7; background-color:#4c96d7">
                        <div class="card-block text-center">
                          <h1 class="card-title">Welcome!</h1>
                          <p class="card-text">Translate any language to english and learn it!</p>
                        </div>
                      </div>
                    </div>
                  </div>
            </div>
  
            <div class="col-sm-2"></div>

          </div>
        </div>
        
        

      
      <%}else if(result!=null&&result2!=null){%>

        <%if(result2.length==1){%>
          <div class="container">
            <div class="row">
              <div class="col-sm-2"></div>
                <div id="carouselExampleIndicators" data-interval="false" class="col-sm-8 carousel slide" data-ride="carousel">
              
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        
                          <div class="card text-light px-5 pb-2" style="border-color:#4c96d7; background-color:#4c96d7">
                            <div class="card-body">
                              <div class="row m-0">
                                
                                <h1 class="card-title text-capitalize mr-3"><%=result.text%> </h1>
                                <% if(id!=null) { %>
                                <form action="/add" method="post" onsubmit="alert('Word added to your dictionary.');">
                                  <input name="source" value="<%=key%>" hidden>
                                  <input name="result" value="<%result.text%>" hidden>
                                  <input name="partOfSpeech" value="<%=result2[0].partOfSpeech%>" hidden>
                                  <input name="definition" value="<%=result2[0].definition%>" hidden>
                                  <button type="submit" class="btn btn-outline-light mt-2" style="height:min-content;"><i class="fa fa-plus" aria-hidden="true"></i></button>
                                </form>
                                <% } %>
                            </div>
                                <p class="card-text font-italic"><small><%=result2[0].partOfSpeech%></small></p>
                                <p class="card-text"><%=result2[0].definition%></p>
                              
                            </div>
                          </div>
                        
                      </div>
                    </div>
                  </div>
                  <div class="col-sm-2"></div>

            </div>
          </div>
          
          <%}else{%>

            <div class="container">
            <div class="row">
              <div class="col-sm-2"></div>
              <div id="carouselExampleIndicators" data-interval="false" class="col-sm-8 carousel slide" data-ride="carousel">
              
                  <ol class="carousel-indicators">
                    <%for(i=0;i<result2.length;i++){
                      if(i==0){%>
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <%}else{%>
                      <li data-target="#carouselExampleIndicators" data-slide-to="<%=i%>"></li>
                    <%}}%>
                  </ol>
                  
                  <div class="carousel-inner">
                      <%for(i=0;i<result2.length;i++){
                        if(i==0){%>
                        <div class="carousel-item active">
                              <div class="card text-light px-5 pb-5" style="border-color:#4c96d7; background-color:#4c96d7">
                                <div class="card-body">
                                    <div class="row m-0">
                                        <h1 class="card-title text-capitalize mr-3"><%=result.text%> </h1>
                                        <% if(id!=null) { %>
                                        <form action="/add" method="post" onsubmit="alert('Word added to your dictionary.');">
                                          <input name="source" value="<%=key%>" hidden>
                                          <input name="result" value="<%=result.text%>" hidden>
                                          <input name="partOfSpeech" value="<%=result2[i].partOfSpeech%>" hidden>
                                          <input name="definition" value="<%=result2[i].definition%>" hidden>
                                          <button type="submit" class="btn btn-outline-light mt-2" style="height:min-content;"><i class="fa fa-plus" aria-hidden="true"></i></button>
                                        </form>
                                        <% } %>
                                    </div>
                                    <p class="card-text font-italic"><small><%=result2[i].partOfSpeech%></small></p>
                                    <p class="card-text"><%=result2[i].definition%></p>
                                </div>
                              </div>
                              
                            
                          </div>
                        <%}else{%>
                        <div class="carousel-item">
                          
                            <div class="card text-light px-5 pb-5" style="border-color:#4c96d7; background-color:#4c96d7">
                              <div class="card-body">
                                  <div class="row m-0">
                                      <h1 class="card-title text-capitalize mr-3"><%=result.text%> </h1>
                                      <% if(id!=null) { %>
                                      <form action="/add" method="post" onsubmit="alert('Word added to dictionary');">
                                        <input name="source" value="<%=key%>" hidden>
                                        <input name="result" value="<%=result.text%>" hidden>
                                        <input name="partOfSpeech" value="<%=result2[i].partOfSpeech%>" hidden>
                                        <input name="definition" value="<%=result2[i].definition%>" hidden>
                                        <button type="submit" class="btn btn-outline-light mt-2" style="height:min-content;"><i class="fa fa-plus" aria-hidden="true"></i></button>
                                      </form>
                                      <% } %>
                                  </div>
                                  <p class="card-text font-italic"><small><%=result2[i].partOfSpeech%></small></p>
                                  <p class="card-text"><%=result2[i].definition%></p>
                              </div>
                            </div>
                          
                        </div>
                  <%}}%>
                  </div>
                  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"  data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"  data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>
              <div class="col-sm-2"></div>
  
            </div>
          </div>
            
            <%}%>
        
      <%}else{%>

        <div class="container">
          <div class="row">
            <div class="col-sm-2"></div>
            <div id="carouselExampleIndicators" data-interval="false" class="col-sm-8 carousel slide" data-ride="carousel">
              
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <div class="card text-light px-5 pb-5" style="border-color:#4c96d7; background-color:#4c96d7">
                      <div class="card-body">
                          <h1 class="card-title"><%=result.text%></h1>
                          <p class="card-text font-italic"><small>Definition not found.</small></p>
                        
                      </div>
                    </div>
                  </div>
                </div>
      
              </div>
            <div class="col-sm-2"></div>

          </div>
        </div>
        
        <%}%>
          

  
</body>
</html>
